@model Eburger.Models.RegisterViewModel
@{
    ViewBag.Title = "Usercreate";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="font-weight-bold text-center text-warning">New <span class="text-primary text-uppercase">Orders</span> <i class="fas fa-shopping-cart text-success"></i></h3>
            <hr />
        </div>
    </div>

    <div class="row mt-3 justify-content-center">
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <div class="list-group" id="list-tab" role="tablist">
                        <a class="list-group-item list-group-item-action " id="list-home-list" href="/Carts/Admindashboard" role="tab" aria-controls="home">Dashboard</a>
                        <a class="list-group-item list-group-item-action " id="list-profile-list" href="/Carts/Checkorder" role="tab" aria-controls="profile">Orders</a>
                        <a class="list-group-item list-group-item-action active" id="list-profile-list" href="/Account/Usercreate" role="tab" aria-controls="profile">Create user</a>
                        <a class="list-group-item list-group-item-action " id="list-settings-list" href="/burger_type//Index" role="tab" aria-controls="settings">Manage Menu</a>
                        <a class="list-group-item list-group-item-action" id="list-settings-list" href="/tbl_burger/Index" role="tab" aria-controls="settings">Manage Burgers</a>
                        <a class="list-group-item list-group-item-action" id="list-settings-list" href="/Manage/ChangePassword" role="tab" aria-controls="settings">Settings</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card bg-info">
                <div class="card-header">
                    <h3 class="text-center text-white font-weight-bolder">Registration Form</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Usercreate", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-4">
                                <label class="text-light">First name <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" name="FName" id="FName" placeholder="First Name" />
                            </div>
                            <div class="col-md-4">
                                <label class="text-light">Last name <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" name="LName" id="LName" placeholder="Last Name" />
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label class="text-light">Address <span class="text-danger">*</span></label>
                                <textarea class="form-control " name="UAddress" id="UAddress" placeholder="Address" rows="2"></textarea>
                            </div>
                            <div class="col-md-4">
                                <label class="text-light">Mobile number <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" name="PhoneNumber" id="PhoneNumber" placeholder="Mobile number" />
                            </div>
                            <div class="col-md-4">
                                <label class="text-light">Email <span class="text-danger">*</span></label>
                                <input class="form-control" type="email" name="Email" id="Email" placeholder="Email address" />
                            </div>
                            <div class="col-md-4">
                                <label class="text-light mt-3">Password <span class="text-danger">*</span></label>
                                <input class="form-control " type="password" name="Password" id="Password" placeholder="Password" />
                            </div>
                            <div class="col-md-4">
                                <label class="text-light mt-3">Confirm password <span class="text-danger">*</span></label>
                                <input class="form-control " type="password" name="ConfirmPassword" id="ConfirmPassword" placeholder="Confirm Password" />
                            </div>
                            <div class="col-md-4">
                                <label class="text-light mt-3">User role <span class="text-danger">*</span></label>
                                <select class="form-control" name="Role" id="Role">
                                    <option value="Admin">Admin</option>
                                    <option value="Deliverman">Delivery</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mt-4 ">
                            <div class="col-md-4">
                                <input class="btn btn-block btn-outline-warning text-light" value="Submit" type="submit" />
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>

</div>

